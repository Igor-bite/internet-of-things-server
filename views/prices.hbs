<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Prices</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="description" content="Controller for all your IoT things.">
    <meta name="keywords" content="iot, internet of things, controller, arduino, esp">
    <meta name="author" content="Igor Klyuzhev">
    <link rel="stylesheet" href="assets/css/main.css"/>
    <link rel="stylesheet" href="assets/css/menu_bar.css"/>
    <script type="text/javascript" src="js/page_load.js"></script>
</head>
<body>
<div class="container">
  {{> header }}
  <div class="main-container">
    <div class="main">
        <article class="page_name">
            <h3>Choose the most suitable plan for you</h3>
        </article>
        <div class="full_size">
            <div class="price_plans_container">
              {{#each prices}}
                <div class="grid-item-header">{{this.planName}}</div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item-price"><b>${{this.priceForMonth}} /month</b></div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item">{{this.devicesMax}} devices max</div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item">{{this.usersMax}} users max</div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item">{{this.widgetsTypes}} Widgets</div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item">{{this.logsStorageTime}} of historical data</div>
              {{/each}}
              {{#each prices}}
                <div class="grid-item-button">{{this.buttonActionText}}</div>
              {{/each}}
            </div>
        </div>
        <div class="mini_size">
          <div class="price_plans_container">
            {{#each prices}}
              <div class="grid-item-header">{{this.planName}}</div>
              <div class="grid-item-price"><b>${{this.priceForMonth}} /month</b></div>
              <div class="grid-item">{{this.devicesMax}} devices max</div>
              <div class="grid-item">{{this.usersMax}} users max</div>
              <div class="grid-item">{{this.widgetsTypes}} Widgets</div>
              <div class="grid-item">{{this.logsStorageTime}} of historical data</div>
              <div class="grid-item-button">{{this.buttonActionText}}</div>
            {{/each}}
          </div>
        </div>
        </section>
      {{> footer}}
    </div>
    {{> shadows}}
  </div>
  {{> sideNavBar }}
</div>

<script src="js/menu_toggle.js"></script>
</body>
</html>